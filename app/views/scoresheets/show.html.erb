<h2><%= @scoresheet.name %> <%= link_to "", edit_scoresheet_path(@scoresheet), class: 'icon-pencil btn'%></h2>
<h3>Deadline: <%= pretty_datetime(@scoresheet.deadline, ampm: true) %></h3>
<div class="well">
  <h3>Bets</h3>
  <table class="table table-striped table-hover table-condensed">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Wager</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <% @scoresheet.bets.each do |b| %>
      <tr>
        <td><%= b.name %></td>
        <td><%= b.bet_type %></td>
        <td><%= pluralize(b.points, 'pt') %></td>
        <td class="icon_button"><%= link_to("", scoresheet_bet_path(@scoresheet, b, method: 'move_higher'), :method => :put, class: 'icon-arrow-up btn') unless b == @scoresheet.bets.first %></td>
        <td class="icon_button"><%= link_to("", scoresheet_bet_path(@scoresheet, b, method: 'move_lower'), :method => :put, class: 'icon-arrow-down btn') unless b == @scoresheet.bets.last %></td>
        <td class="icon_button"><%= link_to("", edit_scoresheet_bet_path(@scoresheet, b), class: 'icon-pencil btn') %></td>
        <td class="icon_button"><%= link_to("", [@scoresheet, b], :method => :delete, class: 'icon-trash btn btn-danger', data: { confirm: "Are you sure you want to remove \"#{b.name}\"?"}) %></td>
      </tr>
    <% end %>
  </table>
  <p>
    <%= link_to 'Add Bet', new_scoresheet_bet_path(@scoresheet), class: 'btn btn-success' %>
    <% if you = @scoresheet.participants.detect {|i| i.email == current_user.email } %>
      <%= link_to 'Your Entries', "/entries/#{you.key}", target: '_blank', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Results', results_scoresheet_path(@scoresheet), class: 'btn btn-inverse'%>
  </p>
</div>
<div class="well">
  <h3>Participants</h3>
  <table class="table table-striped table-hover table-condensed">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <% @scoresheet.participants.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.email %></td>
        <td><%= status?(p) %></td>
        <td><%= link_to "Resend Invite", reinvite_scoresheet_participant_path(@scoresheet, p), class: 'btn btn-info' %></td>
        <td class="icon_button"><%= link_to("", scoresheet_participant_path(@scoresheet, p, method: 'move_higher'), :method => :put, class: 'icon-arrow-up btn') unless p == @scoresheet.participants.first %></td>
        <td class="icon_button"><%= link_to("", scoresheet_participant_path(@scoresheet, p, method: 'move_lower'), :method => :put, class: 'icon-arrow-down btn') unless p == @scoresheet.participants.last %></td>
        <td class="icon_button"><%= link_to "", edit_scoresheet_participant_path(@scoresheet, p), class: 'icon-pencil btn' %></td>
        <td class="icon_button"><%= link_to "", [@scoresheet, p], :method => :delete, class: 'icon-trash btn btn-danger', data: { confirm: "Are you sure you want to remove #{p.name}?"} %></td>
      </tr>
    <% end %>
  </table>
  <p><%= link_to 'Add Participant', new_scoresheet_participant_path(@scoresheet), class: 'btn btn-success' %></p>
</div>