<%= render 'layouts/errors', object: @scoresheet %>
<%= form_for @scoresheet, html: { autocomplete: 'off', class: 'form-horizontal' } do |f| %>
  <%= hidden_field_tag :id, params[:id] %>
  <fieldset>
    <div id="legend">
      <legend class="">Scoresheet</legend>
    </div>
    
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, autofocus: true, class: 'input-xlarge' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :deadline, class: 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :deadline %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :message, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :message, rows: 5, class: 'span6' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :consolation, 'Consolation Bet?', class: 'control-label' %>
      <div class="controls">
        <%= f.check_box :consolation %>
      </div>
    </div>
    
    <div class="control-group consolation-points">
      <%= f.label :consolation_points, 'Consolation Points', class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :consolation_points, autofocus: true, class: 'input-xlarge' %>
      </div>
    </div>

    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <% if @original %>
          <%= f.submit "Clone #{@original.name}", class: 'btn btn-success' %>
        <% else %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </fieldset>
<% end %>