<h2>Scoresheets</h2>

<p><%= link_to 'Add', new_scoresheet_path, class: 'btn' %></p>
<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>Deadline</th>
    <th>Participants</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>&nbsp;</th>
  </tr>
  <% @scoresheets.each do |i| %>
    <tr>
      <td><%= i.name %></td>
      <td><%= pretty_datetime(i.deadline) %></td>
      <td><%= i.participant_count %>
      <td><%= pretty_datetime(i.created_at) %></td>
      <td><%= pretty_datetime(i.updated_at) %></td>
      <td><%= link_to 'View', scoresheet_path(i), class: 'btn' %>
    </tr>
  <% end %>
</table>